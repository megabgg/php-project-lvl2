{
  "name": "hexlet/code",
  "license": "MIT",
  "bin": [
    "bin/gendiff"
  ],
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Andrey Gorshkov",
      "email": "megabgg@yandex.ru"
    }
  ],
  "description": "Difference calculator - second project on hexlet",
  "scripts": {
    "test": "phpunit tests"
  },
  "autoload": {
    "files": [
      "src/CalcDiff.php",
      "src/Parsers.php",
